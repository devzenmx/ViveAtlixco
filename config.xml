<?xml version="1.0" encoding="utf-8"?>

<widget xmlns="http://www.w3.org/ns/widgets"
	xmlns:gap="http://phonegap.com/ns/1.0"
	id="com.vive.atlixco"
	version="2.0.0">

<name>Vive Atlixco</name>

<description>
Magia, belleza y alegr√≠a es lo que se puede observar en Atlixco.
</description>

<author href="https://build.phonegap.com" email="javierortegacoding@gmail.com">
	Javier Ortega Zamora
</author>
	
<platform name="android"> 
  <allow-intent href="market:*" /> 
  <preference name="android-minSdkVersion" value="23" /> 
  <preference name="android-targetSdkVersion" value="28" /> 
</platform>
	
	<preference name="DisallowOverscroll" value="true"/> 
	
	<preference name="KeepRunning" value="true"/> 
	
	
<preference name="orientation" value="portrait"/>
	
<preference name="target-device" value="universal"/>
<preference name="fullscreen" value="false"/>
	
<preference name="android-installLocation" value="auto"/>
<preference name="permissions" value="INTERNET"/>
<preference name="permissions" value="CALL_PHONE"/>

	
<allow-intent href="tel:*" />
<allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />


<!-- Plugins -->
<!-- Core plugins -->
<plugin name="cordova-plugin-device" spec="1.1.7" />
<plugin name="cordova-plugin-dialogs" spec="1.3.4" />
<plugin name="cordova-plugin-whitelist"      source="npm" spec="1.1.0" />
<plugin name="cordova-plugin-cache-clear"      source="npm" spec="1.3.8" />
<allow-navigation href="*" />
<allow-intent href="*" />
<access origin="*" />

	<!-- Third party plugins -->

	<!-- Colocar icono app -->

     <platform name="android">
              <icon src="res/android/xxxhdpi.png" density="ldpi" />
              <icon src="res/android/mdpi.png" density="mdpi" />
              <icon src="res/android/hdpi.png" density="hdpi" />
              <icon src="res/android/xhdpi.png" density="xhdpi" />
              <icon src="res/android/xxhdpi.png" density="xxhdpi" />
              <icon src="res/android/xxxhdpi.png" density="xxxhdpi" />
     </platform>

</widget>
